---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xml" href="{{ site.url }}{{ site.baseurl }}/feed.xslt.xml"?>
{% assign all_posts = site.posts | concat: site.cardboctober | sort:'date' | reverse %}
<feed xmlns="http://www.w3.org/2005/Atom">
    <generator uri="https://jekyllrb.com/" version="3.10.0">Jekyll</generator>
    <link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml" />
    <link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html" />
    <updated>{{ all_posts.first.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ site.baseurl }}/feed.xml</id>
    <title type="html">{{ site.title }}</title>
    <author>
        <name>{{ site.author.name }}</name>
    </author>
    {% for post in all_posts limit:1000 %}
    <entry>
        <title type="html">{{ post.title | escape }}</title>
        <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post.title | escape }}" />
        <published>{{ post.date | date_to_xmlschema }}</published>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ post.url | absolute_url }}</id>
        <author>
            <name>{{ site.author.name }}</name>
        </author>
        {% for category in post.categories %}
        <category term="{{ category }}" />
        {% endfor %}
        <summary type="html">{{ post.excerpt }}</summary>
    </entry>
    {% endfor %}
</feed>